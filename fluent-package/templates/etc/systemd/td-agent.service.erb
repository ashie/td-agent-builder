[Unit]
Description=<%= package_dir %>: Fluentd based data collector for Treasure Data
Documentation=https://docs.treasuredata.com/display/public/PD/About+Treasure+Data%%27s+Server-Side+Agent
After=network-online.target
Wants=network-online.target

[Service]
User=<%= Shellwords.shellescape(package_dir) %>
Group=<%= Shellwords.shellescape(package_dir) %>
LimitNOFILE=65536
Environment=LD_PRELOAD=<%= install_path %>/lib/libjemalloc.so
Environment=GEM_HOME=<%= gem_install_path %>/
Environment=GEM_PATH=<%= gem_install_path %>/
Environment=FLUENT_CONF=/etc/<%= package_dir %>/<%= package_dir %>.conf
Environment=FLUENT_PLUGIN=/etc/<%= package_dir %>/plugin
Environment=FLUENT_SOCKET=/var/run/<%= package_dir %>/<%= package_dir %>.sock
Environment=TD_AGENT_LOG_FILE=/var/log/<%= package_dir %>/<%= package_dir %>.log
<% if pkg_type == 'deb' %>
EnvironmentFile=-/etc/default/<%= package_dir %>
<% else %>
EnvironmentFile=-/etc/sysconfig/<%= package_dir %>
<% end %>
PIDFile=<%= Shellwords.shellescape("/var/run/#{package_dir}/#{package_dir}.pid") %>
RuntimeDirectory=<%= Shellwords.shellescape(package_dir) %>
Type=forking
# XXX: Fix fluentd executables path
ExecStart=/opt/td-agent/bin/fluentd --log $TD_AGENT_LOG_FILE --daemon <%= Shellwords.shellescape("/var/run/#{package_dir}/#{package_dir}.pid") %> $TD_AGENT_OPTIONS
ExecStop=/bin/kill -TERM ${MAINPID}
ExecReload=/bin/kill -HUP ${MAINPID}
Restart=always
TimeoutStopSec=120

[Install]
WantedBy=multi-user.target
