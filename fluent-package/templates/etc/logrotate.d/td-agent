/var/log/<%= package_dir %>/<%= package_dir %>.log {
  daily
  rotate 30
  compress
  delaycompress
  notifempty
  create 640 <%= package_dir %> <%= package_dir %>
  sharedscripts
  postrotate
    pid=/var/run/<%= package_dir %>/<%= package_dir %>.pid
    if [ -s "$pid" ]
    then
      kill -USR1 "$(cat $pid)"
    fi
  endscript
}
